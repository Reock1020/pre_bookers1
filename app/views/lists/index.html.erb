<div class = "index-box">
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

<% @lists.each do |list| %>

  <tr>
    <td><%= list.title%></td>
    <td><%= list.body %></td>
    <td><%= link_to 'Show', list_path(list.id) %></td>
    <td><%= link_to 'Edit', edit_list_path(list.id) %></td>
    <td><%= link_to "Destroy", list_path(list.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
  </tr>
<% end %>
 </tbody>
</table>
<h1>New book</h1>
<% if @list.errors.any? %>
  <div class="error_box">
    <h2 class="error_title"><%= @list.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %>

<%= form_with model: @list, url: '/lists', method: :post do |f| %>
  <form>
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  </form>
<% end %>
</div>