<h1>Editing Book</h1>
<% if @list.errors.any? %>
  <div class="error_box">
    <h2 class="error_title"><%= @list.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %>
<%= form_with model: @list, url: list_path(@list.id), method: :patch do |f| %>
  <form>
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  </form>
  <%= link_to 'Show', list_path(@list.id) %>
  |
  <%= link_to "back", lists_path %>
<% end %>